html
    head
        meta(charset="utf-8")
        link(rel="stylesheet", type="text/css", href="/public/styles/w3.css")
        link(rel="stylesheet", type="text/css", href="/public/styles/jquery-ui.css")
        link(rel="stylesheet", type="text/css", href="/public/styles/all.css")
        link(rel="stylesheet", type="text/css", href="/public/styles/admin.css")
        link(rel="shortcut icon", href="/public/images/favicon.png", type="image/png")
        script(src='/public/scripts/jquery.js')
        script(src='/public/scripts/jquery-ui.js')
        script(src='/public/scripts/admin.js')
        script(src='http://localhost:3030/socket.io/socket.io.js')
        title Участие в аукционе картин
    body
        div.w3-margin.w3-container
            div.tabs
                ul
                    li
                        a.notOutline(href="#tab1") Участники
                    li
                        a.notOutline(href="#tab2") Картины
                div#tab1.w3-table-all.w3-centered
                    table
                        tr.w3-yellow
                            td Участник
                            td Сумма
                        each element in partners
                            tr.partner
                                td
                                    =element.name
                                td
                                    =element.money
                div#tab2.w3-table-all.w3-centered
                    table
                        tr.w3-yellow
                            td Автор
                            td Название
                            td Начальная цена
                            td Конечная цена
                            td Покупатель
                        each element in arts
                            -if (element.is === "участвует")
                                tr.artInfo
                                    td
                                        =element.author
                                    td
                                        =element.name
                                    td
                                        =element.price
                                    td
                                    td
            div.portlet
                div.portlet-header  Ход торгов
                div.portlet-content
                    ul#data
            div.w3-container.w3-margin
                button.startAUCTION Начать аукцион